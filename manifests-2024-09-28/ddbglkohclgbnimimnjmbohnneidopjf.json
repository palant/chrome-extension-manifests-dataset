    },
    "content_scripts": [
        {
          "js": ["scripts/trademe.js"],
          "matches": [
            "*://www.trademe.co.nz/*"
          ]
        }
    ],
    "permissions": [
      "storage",
      "unlimitedStorage",
      "scripting"
    ],
    "host_permissions": [
      "*://www.trademe.co.nz/*"
    ],  
    "web_accessible_resources": [{ 
      "resources": ["/images/*", "settings/*", "/features/*", "/themes/*"],
      "matches": ["<all_urls>"]
    }],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "images/logo-32x32.png"
    },
    "background": {
      "service_worker": "background/background.js"
    },
    "options_ui": {
      "page": "settings/settings.html",
      "open_in_tab": true
    }
