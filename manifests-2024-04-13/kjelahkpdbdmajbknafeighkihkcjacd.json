{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Brimstone",
  "description": "Record and play Brimstone pixel-perfect webpage automation tests",
  "version": "1.25.4",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webNavigation",
    "debugger"
  ],
  "host_permissions": ["*://*/", "<all_urls>"],
  "action": {
    "default_icon": {
      "32": "images/grey_b_32.png"
    },
    "default_title": "Brimstone is inactive.\nClick to open window."
  },
  "icons": {
    "128": "images/orange_b_128.png"
  },
  "options_page": "options_ui.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["recorder.js"],
      "run_at": "document_start",
      "match_about_blank": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
