{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Bookmarkoftheday",
  "description": "Bookmark of the day is a chrome extension which shows you one bookmark everyday.",
  "version": "0.3",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "./icon/icon_128.png",
    "32": "./icon/icon_128.png",
    "48": "./icon/icon_128.png",
    "128": "./icon/icon_128.png"
  },
  "action": {
    "default_title": "Bookmark of the day",
    "default_icons": {
      "16": "./icon/icon_16.png",
      "32": "./icon/icon_48.png",
      "48": "./icon/icon_48.png",
      "128": "./icon/icon_128.png"
    }
  },
  "options_page": "./option/options.html",
  "permissions": [
    "bookmarks",
    "storage",
    "tabs",
    "scripting",
    "alarms"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icon/icon_48.png",
        "option/options.html",
        "icon/twitter.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "commands": {
    "openBookmark": {
      "suggested_key": "Ctrl+B",
      "description": "Open a random bookmark"
    }
  }
}