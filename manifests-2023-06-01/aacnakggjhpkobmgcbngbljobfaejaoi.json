{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Simple Twitch Giveaways",
  "version": "2.1.0",
  "description": "Simple Twitch Extension for Giveaways",
  "manifest_version": 2,
  "short_name": "STG",
  "permissions": [
    "*://*.twitch.tv/*",
    "storage",
    "identity"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitch.tv/*"
      ],
      "js": [
        "content.bundle.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "main.html"
    ],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }

}
