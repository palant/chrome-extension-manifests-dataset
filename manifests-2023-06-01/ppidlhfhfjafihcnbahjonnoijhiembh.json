                "*://*/*.svg*",
                "*://*/*.bmp*",
                "file:///*/*.jpg*",
                "file:///*/*.jpeg*",
                "file:///*/*.png*",
                "file:///*/*.gif*",
                "file:///*/*.webp*",
                "file:///*/*.svg*",
