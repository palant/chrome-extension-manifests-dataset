      "matches": [
        "https://weread.qq.com/*"
      ],
      "js": [
        "src/pages/content/index.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://i.weread.qq.com/*",
    "https://weread.qq.com/*",
    "https://www.yuque.com/api/v2/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/js/*.js",
        "assets/css/*.css",
        "icon-128.png",
        "icon-32.png"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "sandbox": {
    "pages": [
      "src/pages/sandbox/index.html"
    ]
  }
