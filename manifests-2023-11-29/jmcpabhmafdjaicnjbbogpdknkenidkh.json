{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "weread-helper",
  "version": "1.0.0",
  "description": "同步微信读书中书籍元信息、高亮标注、划线感想、书评等至语雀",
  "background": {
    "service_worker": "src/pages/background/index.js",
