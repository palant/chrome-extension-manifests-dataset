  "manifest_version": 3,
  "description": "A web accessibility add-on designed for individuals with ADHD who experience difficulty reading text online.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
