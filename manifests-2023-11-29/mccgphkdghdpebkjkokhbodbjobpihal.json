  "manifest_version": 3,
  "name": "Grayscale Screen",
  "version": "1.0",
  "description": "Converts the screen to grayscale",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "icons": {
    "48": "icon48.png"
