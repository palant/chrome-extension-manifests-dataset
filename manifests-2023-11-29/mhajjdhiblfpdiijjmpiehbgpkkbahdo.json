{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "Product Safety Lookup",
    "version": "0.1.1",
    "description": "Lookup and save EWG™ product ratings from any webpage. Select text and right-click to lookup products.",
    "author": "Annalise Mariottini",
    "manifest_version": 3,
    "permissions": [
        "contextMenus",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://www.ewg.org/*",
        "https://www.google.com/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content-script.js"],
            "css" : ["content.css"],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_title": "Product Safety Lookup - Saved Products",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [ "/images/*" ],
            "matches": [ "<all_urls>" ]
        }
    ],
    "icons": {
        "16": "logo-128.png",
        "48": "logo-48.png",
        "128": "logo-16.png"
    }
}
