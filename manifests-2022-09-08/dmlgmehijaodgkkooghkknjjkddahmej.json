	},
	"background": {
		"page" : "background.html",
		"persistent": false
	},
	"icons": {
		"16": "img/icon.png",
		"32": "img/icon-38.png",
		"48": "img/icon-64.png"
	},
	"content_security_policy" : "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
	"web_accessible_resources": [
		"img/icon-64.png"
	],
	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+A"
			}
		}
	}
