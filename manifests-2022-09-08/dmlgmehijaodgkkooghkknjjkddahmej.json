	"manifest_version": 2,
	"name": "CSS3 Generator",
	"description": "A handy generator for all of your CSS3 needs from within the browser",
	"version": "1.0.5",
	"permissions": [
		"notifications",
		"storage"
	],
	"browser_action": {
