{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2,
    "name": "NBA Result Shield",
    "version": "1.0.2",
    "author": "Axel Svanfeldt",
    "description": "NBA Result Shield allows you to hide game scores and team records by default on platforms such as NBA.com and ESPN.com",
    "permissions": ["*://*/*", "storage", "tabs", "activeTab", "<all_urls>"],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "img/logos/logo-16.png",
            "32": "img/logos/logo-32.png",
            "48": "img/logos/logo-48.png",
            "128": "img/logos/logo-128.png"
        }        
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "icons": {
        "16": "img/logos/logo-16.png",
        "32": "img/logos/logo-32.png",
        "48": "img/logos/logo-48.png",
        "128": "img/logos/logo-128.png"
    }
}