     "js": [  "js/jquery.js", 
              "js/forcetk.js",
              "js/tinycon.js",
              "js/contentscript.js" ],
     "matches": [ "https://*.salesforce.com/*", "https://*.force.com/*" ]
  }],
  "background": {
      "scripts": ["js/background.js"],
      "persistent": false
    }
