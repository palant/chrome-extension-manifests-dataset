{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,

  "name": "Delete Facebook Messages",
  "description": "This extension allows you to delete or archive all of your facebook messages in one click.",
  "version": "3.1",
  "icons":{
    "16":"icons/16.png",
    "32":"icons/32.png",
    "128":"icons/128.png",
